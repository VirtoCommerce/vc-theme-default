{% if is_preview_mode %}

<script>
    (function(){
        var platformUrl = window.location.search.substr(1).split('&').find(q => q.startsWith('ep=')).substr(3);
        var relativeUrl = (platformUrl.endsWith('/') ? '' : '/') + 'Modules/$(VirtoCommerce.PageBuilderModule)/Content/store/{{ scriptName }}.bundle.js';
        var script = document.createElement("script");
        script.type = "text/javascript";
        script.src = platformUrl + relativeUrl;
        document.body.appendChild(script);
    })();
</script>

{% endif %}
