{{ paginator =  collection.products | paginate 20 }}

{% include 'breadcrumb' %}

<div class="grid grid-border">

  <div class="grid-item">

    <header class="section-header">
      <h1 class="section-header--left">{{ collection.title }}</h1>
    </header>

    <div class="grid-uniform"> 

      {% if collection.products.empty? %}
       <div class="grid-item">
         <p>{{ 'collections.general.no_matches' | t }}</p>
       </div>
     {% else %}
         {% for product in collection.products %}

           {% include 'product-list-item-blocks' %}
        
         {% endfor %}
     {% endif %}          

    </div>

  </div>

  {% if paginator.pages > 1 %}
  <div class="grid-item pagination-border-top">
    <div class="grid">
      <div class="grid-item{% if has_sidebar %} large--four-fifths push--large--one-fifth{% endif %}">
          <div class="text-center">
            {% include 'pagination-custom' %}
          </div>
      </div>
    </div>
  </div>
  {% endif %}

</div>


<script>
    window.products = [];
    {% for product in collection.products %}
        window.products.push({
            id: "{{ product.id }}",
            catalogId: "{{ product.catalog_id }}",
            categoryId: "{{ product.category_id }}"
        });
    {% endfor %}
</script>
